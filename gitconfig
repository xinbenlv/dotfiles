[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
    name = Zainan Victor Zhou
    email = zzn@zzn.im

[alias]
    ci = commit
    co = checkout
    s = status
    cam = commit -a -m
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
    wdiff = diff --color-words
    s = status --ignore
    c = commit -am 'update'
[core]
    editor = vim
    excludesfile = ~/.gitignore


[push]
	default = matching
