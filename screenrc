### Custom changes ###
# term
#term "screen-256color"
term xterm-256color
#term rxvt-256color

# encoding
encoding UTF-8

# fix residual editor text
altscreen on

# main options
attrcolor b ".I"
defbce "on"
vbell off
startup_message off
defscrollback 30000
bufferfile "$HOME/.screen/exchange"
hardcopydir "$HOME/.screen/hardcopy"
sorendition dY
hardstatus alwayslastline
hardstatus string '%{= dW}%-Lw%{= dY}%50> %n*%f %t%{= dW}%+Lw%< %{= dW}%-=%D %m/%d/%y %C %A %1`%{-}'


